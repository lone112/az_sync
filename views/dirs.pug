extends layout

block content
    h1= 'Explorer'
    script(src='/javascripts/main.js')
    a(href=home) Root
    hr
    if items === undefined
        - items = []
    ul
        each item, idx in items
            -var item_url = baseDir + item["name"]
            li.file-item(id=item['id'])
                if item["isFile"]
                    =item["name"]
                else if item['isDir']
                    a(href=item_url)= item["name"]

                span
                    if item['exists']
                        a.file-item(href="#" onclick='copy_to_clipboard("' + item["name"] + '","url")') Copy URL
                        a.file-item(href="#" onclick='copy_to_clipboard("' + item["name"] + '","wget")') wget
                        a.file-item(href="#" onclick='copy_to_clipboard("' + item["name"] + '","curl")') curl
                    else
                        a.file-item(href="#" onclick='upload_item("' + item_url + '", "' + item['id'] +
                        '", event)') Upload
                div.progress
                    div.progress-bar(role='progressbar' aria-valuenow='70' aria-valuemin='0' aria-valuemax='100' style='width:1%')
                        span.sr-only